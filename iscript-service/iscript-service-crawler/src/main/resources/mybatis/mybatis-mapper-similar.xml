<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lezo.iscript.service.crawler.dao.SimilarDao">
	<resultMap type="SimilarDto" id="RM_SimilarDto">
		<result column="ID" property="id"/>
		<result column="SIMILAR_CODE" property="similarCode"/>
		<result column="SITE_ID" property="siteId"/>
		<result column="PRODUCT_CODE" property="productCode"/>
		<result column="PRODUCT_NAME" property="productName"/>
		<result column="PRODUCT_URL" property="productUrl"/>
		<result column="PRODUCT_PRICE" property="productPrice"/>
		<result column="BAR_CODE" property="barCode"/>
		<result column="IMG_URL" property="imgUrl"/>
		<result column="SOURCE" property="source"/>
		<result column="CREATE_TIME" property="createTime"/>
		<result column="UPDATE_TIME" property="updateTime"/>
	</resultMap>
	<sql id="SimilarDto-coloumn-list">
		SIMILAR_CODE
		,SITE_ID
		,PRODUCT_CODE
		,PRODUCT_NAME
		,PRODUCT_URL
		,PRODUCT_PRICE
		,BAR_CODE
		,IMG_URL
		,SOURCE
		,CREATE_TIME
		,UPDATE_TIME
	</sql>
	<insert id="batchInsert" parameterType="SimilarDto">
		INSERT INTO T_SIMILAR(
		<include refid="SimilarDto-coloumn-list" />
		)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.similarCode},#{item.siteId},#{item.productCode},#{item.productName},#{item.productUrl},#{item.productPrice},#{item.barCode},#{item.imgUrl},#{item.source},#{item.createTime},#{item.updateTime})
		</foreach>
	</insert>
	<update id="updateOne" parameterType="SimilarDto">
		UPDATE T_SIMILAR SET
		SIMILAR_CODE=#{similarCode},
		SITE_ID=#{siteId},
		PRODUCT_CODE=#{productCode},
		PRODUCT_NAME=#{productName},
		PRODUCT_URL=#{productUrl},
		PRODUCT_PRICE=#{productPrice},
		BAR_CODE=#{barCode},
		IMG_URL=#{imgUrl},
		SOURCE=#{source}
		WHERE ID=#{id}
	</update>
	
	<select id="getSimilarDtos" parameterType="map" resultMap="RM_SimilarDto">
	   SELECT ID,<include refid="SimilarDto-coloumn-list"/>
	   FROM T_SIMILAR
	   WHERE 1=1
	   <if test="codeList.isEmpty()">
	     AND 1=0
	   </if>
	   <if test="!codeList.isEmpty()">
		   <foreach collection="codeList" item="code" open="AND PRODUCT_CODE IN(" close=")" separator=",">
		      #{code}
		   </foreach>
	   </if>
	   <if test="siteId !=null">
	     AND SITE_ID=#{siteId}
	   </if>
	</select>
	<select id="getSimilarDtoBySimilarCodes" parameterType="map" resultMap="RM_SimilarDto">
	   SELECT ID,<include refid="SimilarDto-coloumn-list"/>
	   FROM T_SIMILAR
	   WHERE 1=1
	   <if test="similarCodeList.isEmpty()">
	     AND 1=0
	   </if>
	   <if test="!similarCodeList.isEmpty()">
		   <foreach collection="similarCodeList" item="similarCode" open="AND SIMILAR_CODE IN(" close=")" separator=",">
		      #{similarCode}
		   </foreach>
	   </if>
	   <if test="siteIdList !=null">
	     <foreach collection="siteIdList" item="siteId" open="AND SITE_ID IN(" close=")" separator=",">
		      #{siteId}
		   </foreach>
	   </if>
	</select>
</mapper>