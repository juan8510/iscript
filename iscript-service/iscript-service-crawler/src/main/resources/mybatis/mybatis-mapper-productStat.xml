<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lezo.iscript.service.crawler.dao.ProductStatDao">
	<resultMap type="ProductStatDto" id="RM_ProductStatDto">
		<result column="ID" property="id" />
		<result column="SITE_ID" property="siteId" />
		<result column="SHOP_ID" property="shopId" />
		<result column="PRODUCT_CODE" property="productCode" />
		<result column="PRODUCT_NAME" property="productName" />
		<result column="PRODUCT_URL" property="productUrl" />
		<result column="MIN_PRICE" property="minPrice" />
		<result column="MAX_PRICE" property="maxPrice" />
		<result column="PRODUCT_PRICE" property="productPrice" />
		<result column="MARKET_PRICE" property="marketPrice" />
		<result column="SOLD_NUM" property="soldNum" />
		<result column="COMMENT_NUM" property="commentNum" />
		<result column="GOOD_COMMENT" property="goodComment" />
		<result column="POOR_COMMENT" property="poorComment" />
		<result column="STOCK_NUM" property="stockNum" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="UPDATE_TIME" property="updateTime" />
	</resultMap>
	<sql id="ProductStatDto-coloumn-list">
		SITE_ID
		,SHOP_ID
		,PRODUCT_CODE
		,PRODUCT_NAME
		,PRODUCT_URL
		,MIN_PRICE
		,MAX_PRICE
		,PRODUCT_PRICE
		,MARKET_PRICE
		,SOLD_NUM
		,COMMENT_NUM
		,GOOD_COMMENT
		,POOR_COMMENT
		,STOCK_NUM
		,CREATE_TIME
		,UPDATE_TIME
	</sql>
	<insert id="batchInsert" parameterType="ProductStatDto">
		INSERT INTO T_PRODUCT_STAT(
		<include refid="ProductStatDto-coloumn-list" />
		)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.siteId},#{item.shopId},#{item.productCode},#{item.productName},#{item.productUrl},#{item.minPrice},#{item.maxPrice},#{item.productPrice},#{item.marketPrice},#{item.soldNum},#{item.commentNum},#{item.goodComment},#{item.poorComment},#{item.stockNum},#{item.createTime},#{item.updateTime})
		</foreach>
	</insert>
	<update id="batchUpdate" parameterType="ProductStatDto">
		UPDATE T_PRODUCT_STAT SET
		SHOP_ID=#{shopId},
		PRODUCT_CODE=#{productCode},
		PRODUCT_NAME=#{productName},
		PRODUCT_URL=#{productUrl},
		MIN_PRICE=#{minPrice},
		MAX_PRICE=#{maxPrice},
		PRODUCT_PRICE=#{productPrice},
		MARKET_PRICE=#{marketPrice},
		SOLD_NUM=#{soldNum},
		COMMENT_NUM=#{commentNum},
		GOOD_COMMENT=#{goodComment},
		POOR_COMMENT=#{poorComment},
		STOCK_NUM=#{stockNum},
		CREATE_TIME=#{createTime},
		UPDATE_TIME=#{updateTime}
		WHERE ID=#{id}
	</update>
	<select id="getProductStatDtos" parameterType="map"
		resultMap="RM_ProductStatDto">
		SELECT ID,
		<include refid="ProductStatDto-coloumn-list" />
		FROM T_PRODUCT_STAT
		WHERE 1=1
		<if test="codeList.isEmpty()">
			AND 1=0
		</if>
		<if test="!codeList.isEmpty()">
			<foreach collection="codeList" item="code" open="AND PRODUCT_CODE IN("
				close=")" separator=",">
				#{code}
			</foreach>
		</if>
		<if test="siteId !=null">
			AND SITE_ID=#{siteId}
		</if>
		<if test="minStock !=null">
			AND STOCK_NUM&gt;=#{minStock}
		</if>
	</select>
	<select id="getProductStatDtosByCommentDesc" parameterType="map"
		resultMap="RM_ProductStatDto">
		SELECT ID,
		<include refid="ProductStatDto-coloumn-list" />
		FROM T_PRODUCT_STAT
		WHERE 1=1
		<if test="siteId !=null">
			AND SITE_ID=#{siteId}
		</if>
		ORDER BY COMMENT_NUM DESC
		LIMIT #{limit}
	</select>
	<select id="getProductStatDtosByPriceAsc" parameterType="map"
		resultMap="RM_ProductStatDto">
		SELECT ID,
		<include refid="ProductStatDto-coloumn-list" />
		FROM T_PRODUCT_STAT
		WHERE 1=1
		<if test="siteId !=null">
			AND SITE_ID=#{siteId}
		</if>
		ORDER BY PRODUCT_PRICE ASC
		LIMIT #{limit}
	</select>
	<select id="getProductStatDtosBySoldDesc" parameterType="map"
		resultMap="RM_ProductStatDto">
		SELECT ID,
		<include refid="ProductStatDto-coloumn-list" />
		FROM T_PRODUCT_STAT
		WHERE 1=1
		<if test="siteId !=null">
			AND SITE_ID=#{siteId}
		</if>
		ORDER BY SOLD_NUM DESC
		LIMIT #{limit}
	</select>
	<select id="getProductStatDtosLowestPrice" parameterType="map"
		resultMap="RM_ProductStatDto">
		SELECT ID,
		<include refid="ProductStatDto-coloumn-list" />
		FROM T_PRODUCT_STAT
		WHERE 1=1
		AND ID &gt;=#{fromId}
		<if test="siteId !=null">
			AND SITE_ID=#{siteId}
		</if>
		<if test="updateTime !=null">
			AND UPDATE_TIME &gt;=#{updateTime}
		</if>
		AND MIN_PRICE = PRODUCT_PRICE
		AND MIN_PRICE &lt; MAX_PRICE
		ORDER BY
		SOLD_NUM DESC
		LIMIT #{limit}
	</select>
</mapper>