<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lezo.iscript.service.crawler.dao.ShopInfoDao">
	<resultMap type="ShopInfoDto" id="RM_ShopInfoDto">
		<result column="ID" property="id"/>
		<result column="SHOP_NAME" property="shopName"/>
		<result column="SHOP_CODE" property="shopCode"/>
		<result column="SHOP_URL" property="shopUrl"/>
		<result column="CREATE_TIME" property="createTime"/>
		<result column="UPDATE_TIME" property="updateTime"/>
	</resultMap>
	<sql id="ShopInfoDto-coloumn-list">
		SHOP_NAME
		,SHOP_CODE
		,SHOP_URL
		,CREATE_TIME
		,UPDATE_TIME
	</sql>
	<insert id="batchInsert" parameterType="ShopInfoDto">
		INSERT INTO T_SHOP_INFO(
		<include refid="ShopInfoDto-coloumn-list" />
		)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.shopName},#{item.shopCode},#{item.shopUrl},#{item.createTime},#{item.updateTime})
		</foreach>
	</insert>
	<update id="updateOne" parameterType="ShopInfoDto">
		UPDATE T_SHOP_INFO SET
		SHOP_NAME=#{shopName},
		SHOP_CODE=#{shopCode},
		SHOP_URL=#{shopUrl},
		CREATE_TIME=#{createTime},
		UPDATE_TIME=#{updateTime}
		WHERE ID=#{id}
	</update>
</mapper>