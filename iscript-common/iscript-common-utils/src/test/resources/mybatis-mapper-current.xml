<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lecode.crawler.dao.NewsListDao">
	<resultMap type="NewsListDto" id="RM_NewsListDto">
		<result column="ID" property="id"/>
		<result column="SITE_HOST" property="siteHost"/>
		<result column="NEWS_TITLE" property="newsTitle"/>
		<result column="NEWS_URL" property="newsUrl"/>
		<result column="NEWS_SORT" property="newsSort"/>
		<result column="NEWS_TYPE" property="newsType"/>
		<result column="PUBLISH_TIME" property="publishTime"/>
		<result column="CREATE_TIME" property="createTime"/>
		<result column="UPDATE_TIME" property="updateTime"/>
	</resultMap>
	<sql id="NewsListDto-coloumn-list">
		SITE_HOST
		,NEWS_TITLE
		,NEWS_URL
		,NEWS_SORT
		,NEWS_TYPE
		,PUBLISH_TIME
		,CREATE_TIME
		,UPDATE_TIME
	</sql>
	<insert id="batchInsert" parameterType="NewsListDto">
		INSERT INTO T_NEWS_LIST(
		<include refid="NewsListDto-coloumn-list" />
		)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.siteHost},#{item.newsTitle},#{item.newsUrl},#{item.newsSort},#{item.newsType},#{item.publishTime},#{item.createTime},#{item.updateTime})
		</foreach>
	</insert>
	<update id="updateOne" parameterType="NewsListDto">
		UPDATE T_NEWS_LIST SET
		SITE_HOST=#{siteHost},
		NEWS_TITLE=#{newsTitle},
		NEWS_URL=#{newsUrl},
		NEWS_SORT=#{newsSort},
		NEWS_TYPE=#{newsType},
		PUBLISH_TIME=#{publishTime},
		CREATE_TIME=#{createTime},
		UPDATE_TIME=#{updateTime}
		WHERE ID=#{id}
	</update>
</mapper>