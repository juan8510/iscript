<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vipshop.crawler.task.dao.CrawlerStrategyConfigDao">
	<resultMap type="CrawlerStrategyConfigDto" id="RM_CrawlerStrategyConfigDto">
		<result column="ID" property="id"/>
		<result column="SITE_ID" property="siteId"/>
		<result column="STRATEGY_NAME" property="strategyName"/>
		<result column="STRATEGY_CONTENT" property="strategyContent"/>
		<result column="CREATE_TIME" property="createTime"/>
		<result column="UPDATE_TIME" property="updateTime"/>
	</resultMap>
	<sql id="CrawlerStrategyConfigDto-coloumn-list">
		SITE_ID
		,STRATEGY_NAME
		,STRATEGY_CONTENT
		,CREATE_TIME
		,UPDATE_TIME
	</sql>
	<insert id="batchInsert" parameterType="CrawlerStrategyConfigDto">
		INSERT INTO T_CRAWLER_STRATEGY_CONFIG(
		<include refid="CrawlerStrategyConfigDto-coloumn-list" />
		)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.siteId},#{item.strategyName},#{item.strategyContent},#{item.createTime},#{item.updateTime})
		</foreach>
	</insert>
	<update id="updateOne" parameterType="CrawlerStrategyConfigDto">
		UPDATE T_CRAWLER_STRATEGY_CONFIG SET
		SITE_ID=#{siteId},
		STRATEGY_NAME=#{strategyName},
		STRATEGY_CONTENT=#{strategyContent},
		CREATE_TIME=#{createTime},
		UPDATE_TIME=#{updateTime}
		WHERE ID=#{id}
	</update>
</mapper>