<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vipshop.crawler.match.dao.MatchTrackDao">
	<resultMap type="MatchTrackDto" id="RM_MatchTrackDto">
		<result column="ID" property="id"/>
		<result column="TASK_ID" property="taskId"/>
		<result column="PRODUCT_CODE" property="productCode"/>
		<result column="SITE_ID" property="siteId"/>
		<result column="OPPON_PRODUCT_CODE" property="opponProductCode"/>
		<result column="IS_DELETE" property="isDelete"/>
		<result column="CREATE_TIME" property="createTime"/>
		<result column="UPDATE_TIME" property="updateTime"/>
	</resultMap>
	<sql id="MatchTrackDto-coloumn-list">
		TASK_ID
		,PRODUCT_CODE
		,SITE_ID
		,OPPON_PRODUCT_CODE
		,IS_DELETE
		,CREATE_TIME
		,UPDATE_TIME
	</sql>
	<insert id="batchInsert" parameterType="MatchTrackDto">
		INSERT INTO T_MATCH_TRACK(
		<include refid="MatchTrackDto-coloumn-list" />
		)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.taskId},#{item.productCode},#{item.siteId},#{item.opponProductCode},#{item.isDelete},#{item.createTime},#{item.updateTime})
		</foreach>
	</insert>
	<update id="updateOne" parameterType="MatchTrackDto">
		UPDATE T_MATCH_TRACK SET
		TASK_ID=#{taskId},
		PRODUCT_CODE=#{productCode},
		SITE_ID=#{siteId},
		OPPON_PRODUCT_CODE=#{opponProductCode},
		IS_DELETE=#{isDelete},
		CREATE_TIME=#{createTime},
		UPDATE_TIME=#{updateTime}
		WHERE ID=#{id}
	</update>
</mapper>