<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baidu.mall.market.dao.client.MarketTemplateItemMapper">
	<resultMap type="MarketTemplateItemMapper" id="RM_MarketTemplateItemMapper">
		<result column="id" property="id"/>
		<result column="item_name" property="itemName"/>
		<result column="type" property="type"/>
		<result column="value_type" property="valueType"/>
		<result column="is_collection_type" property="isCollectionType"/>
		<result column="item_class" property="itemClass"/>
		<result column="add_time" property="addTime"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	<sql id="MarketTemplateItemMapper-coloumn-list">
		id
		,item_name
		,type
		,value_type
		,is_collection_type
		,item_class
		,add_time
		,update_time
	</sql>
	<insert id="batchInsert" parameterType="MarketTemplateItemMapper">
		INSERT INTO market_template_item(
		<include refid="MarketTemplateItemMapper-coloumn-list" />
		)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.itemName},#{item.type},#{item.valueType},#{item.isCollectionType},#{item.itemClass},#{item.addTime},#{item.updateTime})
		</foreach>
	</insert>
	<update id="batchUpdate" parameterType="MarketTemplateItemMapper">
		UPDATE market_template_item SET
		id=#{id}
		,item_name=#{itemName}
		,type=#{type}
		,value_type=#{valueType}
		,is_collection_type=#{isCollectionType}
		,item_class=#{itemClass}
		,add_time=#{addTime}
		,update_time=#{updateTime}
		WHERE ID=#{id}
	</update>
</mapper>