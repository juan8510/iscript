<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vipshop.dp.vipshopinterface.dao.CategoryGoodNumDao">
	<resultMap type="CategoryGoodNumDto" id="RM_CategoryGoodNumDto">
		<result column="stat_date" property="statDate"/>
		<result column="brand_name" property="brandName"/>
		<result column="sell_date_start" property="sellDateStart"/>
		<result column="category_first_id" property="categoryFirstId"/>
		<result column="category_first_name" property="categoryFirstName"/>
		<result column="category_second_id" property="categorySecondId"/>
		<result column="category_second_name" property="categorySecondName"/>
		<result column="category_third_id" property="categoryThirdId"/>
		<result column="category_third_name" property="categoryThirdName"/>
		<result column="goods_code_num" property="goodsCodeNum"/>
	</resultMap>
	<sql id="CategoryGoodNumDto-coloumn-list">
		stat_date
		,brand_name
		,sell_date_start
		,category_first_id
		,category_first_name
		,category_second_id
		,category_second_name
		,category_third_id
		,category_third_name
		,goods_code_num
	</sql>
	<insert id="batchInsert" parameterType="CategoryGoodNumDto">
		INSERT INTO dm_bijia_category_goods_code_num(
		<include refid="CategoryGoodNumDto-coloumn-list" />
		)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.statDate},#{item.brandName},#{item.sellDateStart},#{item.categoryFirstId},#{item.categoryFirstName},#{item.categorySecondId},#{item.categorySecondName},#{item.categoryThirdId},#{item.categoryThirdName},#{item.goodsCodeNum})
		</foreach>
	</insert>
	<update id="updateOne" parameterType="CategoryGoodNumDto">
		UPDATE dm_bijia_category_goods_code_num SET
		stat_date=#{statDate},
		brand_name=#{brandName},
		sell_date_start=#{sellDateStart},
		category_first_id=#{categoryFirstId},
		category_first_name=#{categoryFirstName},
		category_second_id=#{categorySecondId},
		category_second_name=#{categorySecondName},
		category_third_id=#{categoryThirdId},
		category_third_name=#{categoryThirdName},
		goods_code_num=#{goodsCodeNum}
		WHERE ID=#{id}
	</update>
</mapper>